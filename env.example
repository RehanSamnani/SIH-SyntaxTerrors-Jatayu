# Drone Companion System Environment Configuration
# Copy this file to .env and modify values as needed

# Device Configuration
DEVICE_ID=pi-drone-01

# MQTT Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TLS_ENABLED=false
MQTT_CA_CERT=/etc/ssl/certs/ca-certificates.crt

# GPS Configuration
GPS_SERIAL_PORT=/dev/serial0
GPS_SERIAL_BAUD=9600
GPS_OUTPUT_PATH=/home/pi/drone/telemetry/gps_latest.json

# Telemetry Configuration
TELEMETRY_INTERVAL=1.0
MAX_LOG_PACKETS=500
MAX_LOG_SIZE_MB=10
TELEMETRY_LOG_PATH=/home/pi/drone/telemetry/telemetry.log

# Mission Configuration
MISSION_SPEED=5.0
MISSION_ALTITUDE=50.0

# Obstacle Detection Configuration
MODEL_PATH=/home/pi/sih/models/mobilenet_ssd_v1.tflite
LABELS_PATH=/home/pi/sih/models/coco_labels.txt
CONF_THRESHOLD=0.5
TOP_K=20
SKIP_FRAMES=2
DIST_K=40.0

# Camera Configuration
CAM_W=640
CAM_H=480
CAM_FPS=15
MODEL_W=300
MODEL_H=300

# Servo Configuration
SERVO_GPIO=18
SERVO_MIN_PW=0.0005
SERVO_MAX_PW=0.0025

# Logging Configuration
LOG_LEVEL=INFO
